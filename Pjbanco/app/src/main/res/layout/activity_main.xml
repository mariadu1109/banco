<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="513dp"
        android:onClick="btnPix"
        app:icon="@drawable/pix_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="67dp"
        android:layout_height="51dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="512dp"
        android:onClick="btnDeposit"
        app:icon="@drawable/cash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="213dp"
        android:layout_marginBottom="513dp"
        android:onClick="btnPagar"
        app:icon="@drawable/bar_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTransf"
        android:layout_width="71dp"
        android:layout_height="52dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="511dp"
        android:onClick="btnTransf"
        app:icon="@drawable/deposit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="614dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>